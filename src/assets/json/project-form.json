{
    "pageHeading": "Project",
    "formType": "simple",
    "editMode": "popup",
    "keyField": "_id",
    "form": {
        "collectionName": "project",
        "fields": [
            {
                "fieldGroupClassName": "display-flex",
                "fieldGroup": [
                    {
						"type": "label-view",
						"key": "projectid",
						"className": "flex-6",
						"props": {
							"label": "Project Id",
							"label_width": 100,
							"value_width": 200,
							"value_in_next_row": true
						},
						"hideExpression": "!model.isEdit"
					},
                    {
                        "type": "input",
                        "key": "projectid",
                        "className": "flex-6",
                        "props": {
                            "label": "Project Id",
                            "placeholder": "Project Id",
                            "pattern": "^[a-zA-Z0-9-_]*$",
                            "required": true
                        },
						"hideExpression": "model.isEdit"

                    },{
						"type": "label-view",
						"key": "projectname",
						"className": "flex-6",
						"props": {
							"label": "Project Name",
							"label_width": 100,
							"value_width": 200,
							"value_in_next_row": true
						},
						"hideExpression": "!model.isEdit"
					},
                    {
                        "type": "input",
                        "key": "projectname",
                        "className": "flex-6",
                        "props": {
                            "label": "Project Name",
                            "placeholder": "Project Name",
                           
                            "pattern": "^[a-zA-Z0-9&>/;,:-_/]+( [a-zA-Z0-9&>/;,:-_/!@-]+)*$",
                            "required": true
                        },
                        "hideExpression": "model.isEdit"

                    },
                    {
                        "type": "input",
                        "key": "clientname",
                        "className": "flex-6",
                        "props": {
                            "label": "Client Name",
                            "placeholder": "Client Name",
                            "required": true,
                            "readonly": true
                             
                        },
                        "expressions": {
                            "hide": "!model.isEdit"
                        }
                    },
                    {
                        "type": "select-input",
                        "key": "clientname",
                        "className": "flex-6",
                        "props": {
                            "label": "Client Name",
                            "placeholder": "Client Name",
                            "labelPropTemplate": " {{clientname}}",
                            "optionsDataSource": {
                                "collectionName": "clients/client"
                            },
                           
                            "labelProp": "clientname",
                            "valueProp": "clientname",
                            "required": true
                        },
                        "expressions": {
                            "hide": "model.ishide "
                           
                        }
                    },
                    {
                        "type": "select",
                        "key": "projecttype",
                        "className": "flex-6",
                        "props": {
                            "label": "Project Type",
                            "placeholder": "Project Type",
                            "options": [
                                {
                                    "value": "Software Development ",
                                    "label": "Software Development "
                                },
                                {
                                    "value": "Web Development",
                                    "label": "Web Development"
                                },
                                {
                                    "value": "Technology Installation",
                                    "label": "Technology Installation "
                                },
                                {
                                    "value": "Cloud Computing ",
                                    "label": "Cloud Computing "
                                },
                                {
                                    "value": "Cyber Security ",
                                    "label": "Cyber Security"
                                },
                                {
                                    "label": "Others",
                                    "value": "Others"
                                }
                            ],
                            "required": true
                        }
                    }
                ]
            },
            
            {
                "fieldGroupClassName": "display-flex",
                "fieldGroup": [
                    {
                        "className": "flex-6",
                        "key": "startdate",
                        "type": "datepicker-input", 
                        "props": {
                          "label": "Scheduled Start Date",
                          "placeholder": "Scheduled Start Date",
                          "type": "date",
                          "required": true
                        }
                      },
                      {
                        "className": "flex-6",
                        "key": "enddate",
                        "type": "datepicker-input",
                        "parentKey": "startdate",
                        "parentCollectionName": "project",
                        "props": {
                          "label": "Scheduled End Date",
                          "placeholder": "Scheduled End Date",
                          "type": "date",
                          "required": true
                        }
                      },
                    {
                        "type": "select",
                        "key": "status",
                        "className": "flex-6",
                        "props": {
                            "label": "Project Status",
                            "options": [
                                {
                                    "label": "Active",
                                    "value": "Active"
                                },
                                {
                                    "label": "Inactive",
                                    "value": "Inactive"
                                }
                                
                                 
                            ],
                            "placeholder": "Project Status",
                            "required": true
                        },
                    
                        "expressions": {
                            "hide": "!model.isshow"
                        }
                        }
                ]
            },
            {
                "type": "html-input",
                "key": "projectdetails",
                "className": "flex-6",
                "props": {
                    "label": "Project Details",
                    "required": true
                },
                
                "maxlength": 500
            }
        ],
        "defaultValues": [
            {
              "colName": "status",
              "type": "string",
              "value": "Active"
            }
          ]
    },
    "onCancelRoute": "/list/project"
}